<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Map Preview Section -->
            <FrameLayout
                android:id="@+id/map_preview"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_corners"
                android:elevation="2dp"
                android:clipToOutline="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_gravity="center_horizontal">
                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/map_preview_fragment"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>

            <!-- Main Actions Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Main Actions"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary_dark"
                android:layout_marginBottom="16dp" />

            <!-- Quick Actions Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <!-- Row 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <!-- Browse Shelves Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="@color/card_background_dark"
                        app:strokeColor="@color/divider_dark"
                        app:strokeWidth="1dp"
                        app:rippleColor="@color/accent_blue">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/shelf_double_down_1534_svgrepo_com"
                                android:contentDescription="Browse Icon"
                                android:layout_marginBottom="6dp"
                                android:tint="@color/accent_blue" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Go to Shelf"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary_dark"
                                android:gravity="center" />

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_browse_shelves"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:insetLeft="0dp"
                            android:insetRight="0dp"
                            app:cornerRadius="16dp" />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Add Shelf Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="@color/card_background_dark"
                        app:strokeColor="@color/divider_dark"
                        app:strokeWidth="1dp"
                        app:rippleColor="@color/walmart_orange">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_baseline_add_24"
                                android:contentDescription="Add Shelf Icon"
                                android:layout_marginBottom="6dp"
                                android:tint="@color/walmart_yellow" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="New Shelf Add"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary_dark"
                                android:gravity="center" />

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_add_shelf"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:insetLeft="0dp"
                            android:insetRight="0dp"
                            app:cornerRadius="16dp" />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Bill to Shelves Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="@color/card_background_dark"
                        app:strokeColor="@color/divider_dark"
                        app:strokeWidth="1dp"
                        app:rippleColor="@color/accent_blue">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/camera"
                                android:contentDescription="Bill to Shelves Icon"
                                android:layout_marginBottom="6dp"
                                android:tint="@color/accent_blue" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bill to Shelves"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary_dark"
                                android:gravity="center" />

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_bill_to_shelves"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:insetLeft="0dp"
                            android:insetRight="0dp"
                            app:cornerRadius="16dp" />

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

            <!-- Recent Shelves Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Recent Shelves"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary_dark" />

                <TextView
                    android:id="@+id/btn_view_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All"
                    android:textSize="14sp"
                    android:textColor="@color/accent_blue"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp" />

            </LinearLayout>

            <!-- Recent Shelves List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_recent_shelves"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:overScrollMode="never"
                android:scrollbars="none" />

            <TextView
                android:id="@+id/tv_no_recent_shelves"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No recent shelves yet. Add a new shelf to get started!"
                android:textAlignment="center"
                android:textColor="@color/text_secondary_dark"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textSize="16sp" />

            <!-- Quick Navigation Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Navigation"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary_dark"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp" />

            <!-- Quick Navigation Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_ar_navigation"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Start AR Navigation"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/accent_blue"
                    app:cornerRadius="12dp"
                    app:elevation="2dp"
                    app:icon="@drawable/ic_baseline_view_in_ar_24"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:iconTint="@color/white" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_map_view"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:text="Map View"
                    android:textColor="@color/accent_blue"
                    android:textSize="15sp"
                    app:backgroundTint="@color/surface_dark"
                    app:cornerRadius="12dp"
                    app:elevation="1dp"
                    app:icon="@drawable/ic_baseline_explore_24"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconTint="@color/accent_blue"
                    app:strokeColor="@color/accent_blue"
                    app:strokeWidth="1dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout> 